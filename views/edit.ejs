<%-include("partials/header",{isLoggedIn:isLoggedIn,userName:userName})-%>

<div class="container mt-5">
    <h3 class="my-3">Edit Your Blog Here... 😍 </h3>
    <form action="/posts/compose" method="POST">
        <input  type="text" name="postTitle" placeholder="Enter Title Here..." class="form-control" required>
        <textarea  name="postContent" cols="30" rows="10" class="mt-3 form-control" placeholder="Enter Content Here..."
            required></textarea>
        <input type="submit" value="Compose" class="mt-5 btn btn-md btn-danger">
    </form>
</div>
