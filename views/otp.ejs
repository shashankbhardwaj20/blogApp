<%-include("partials/header",{isLoggedIn:isLoggedIn,userName:userName})-%>
<div class="container">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">OTP Verification (OTP Valid for 30sec only)</h5>
            <form action="/handelVerifyOtp" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="form-group">
                    <label for="otp">OTP</label>
                    <input type="text" class="form-control" id="otp" name="otp" placeholder="Enter the OTP" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Verify OTP</button>
            </form>
        </div>
    </div>
</div>
<%-include("partials/footer")-%>